<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Successful"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passenger Name:Yiming"
        android:textSize="18sp"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textViewGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender: Male"
        android:textSize="18sp"
        android:layout_below="@id/textViewName"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textViewDOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth: 01/01/1980"
        android:textSize="18sp"
        android:layout_below="@id/textViewGender"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Billing Address:Winnipeg,MB"
        android:textSize="18sp"
        android:layout_below="@id/textViewDOB"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textViewFlightInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flight Information:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/textViewAddress"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textViewFlightDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flight AC26\nFrom: PVG\nTo: YVR\nDeparture: 2024-02-21 09:00\nArrival: 2024-02-22 12:00"
        android:textSize="18sp"
        android:layout_below="@id/textViewFlightInfo"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/buttonMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return to Main Menu"
        android:layout_below="@id/textViewFlightDetails"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
